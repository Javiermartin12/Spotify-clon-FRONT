{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Types */
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "babel__core",
      "babel__generator",
      "babel__template",
      "babel__traverse",
      "react",
      "react-modal",
      "react-router",
      "react-router-dom",
      "history",
      "parse-json"
    ]
  },
  
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
